<div class="row">
	<div class="col-lg-12">
		<div class="box">
			<div class="row">
        <div class="col-lg-12">
          <section class="panel">
            <div class="panel-body">
              <form aciton="/welcome/search" class="form form-horizontal" role="form">
				        <div class="row">
				        	<div class="col-sm-12">
						        <div class="col-sm-2"><input type="text" name="search[min_sqrt]" class="form-control" placeholder="Min sqrt"></div>
						        <div class="col-sm-2"><input type="text" name="search[max_sqrt]" class="form-control" placeholder="Max sqrt"></div>
						        <div class="col-sm-2"><input type="text" name="search[min_price]" class="form-control" placeholder="Min price"></div>
						        <div class="col-sm-2"><input type="text" name="search[max_price]" class="form-control" placeholder="Max price"></div>
				            <div class="col-sm-2">
				            	<select name="search[to_do]" id="property_to_do" class="select optional"><option value="">All</option>
												<option value="0">Rent</option>
												<option value="1">Sale</option>
												<option value="2">Purchase</option>
											</select>
										</div>
										<div class="col-sm-1">
					            <button type="submit" class="btn btn-success"><i class="icon-search"></i> Search</button>
					          </div>
					        </div>
					      </div>
			        </form>
            </div>
          </section>
        </div>
      </div>
			<div class="box-header" data-original-title>
				<h2><i class="icon-user"></i><span class="break"></span><%=current_user.properties.size %> office spaces for rent </h2>
				<div class="box-icon">
					<a href="table.html#" class="btn-setting"><i class="icon-wrench"></i></a>
					<a href="table.html#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="table.html#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<table class="table table-striped table-bordered bootstrap-datatable datatable">
				  <thead>
					  <tr>
					  	<th>ID</th>
						  <th>Photo</th>
				      <th>Project</th>
				      <th>Area</th>
				      <th>City</th>
				      <th>Posted</th>
				      <th>Price<span class="text-muted"> (Rs)</span></th>
				      <th>Size<span class="text-muted"> (sqrt)</span></th>
				      <th>For sale/buy/rent</th>
				      <th>Contact</th>
					  </tr>
				  </thead>
				  <tbody>
				    <% @properties.each do |property| %>
				      <tr>
				      	<td><%= property.id %></td>
				        <td><img src="/photo10.jpg" style="height: 23px; width: 23px;"> x 3</td>
				        <td><%= property.project %></td>
				        <td><%= property.area %></td>
				        <td><%= property.city %></td>
				        <td><%= property.created_at.to_s(:short) %></td>
				        <td><%= property.price %></td>
				        <td><%= property.size %></td>
				        <td><span class="label label-primary"><%= Property::TODO_TYPE.keys[property.to_do] if  property.to_do %></span></td>
				        <td><%= property.contact %></td>
				      </tr>
				    <% end %>
				  </tbody>
			  </table>
			  <%= will_paginate @properties, renderer: BootstrapPagination::Rails  unless params[:search].present? %>
			</div>
		</div>
	</div><!--/col-->

</div><!--/row-->